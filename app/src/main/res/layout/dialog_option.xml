<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/item_excel_option"
        layout="@layout/item_excel_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/item_pdf_option"
        layout="@layout/item_pdf_option"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/item_excel_option"
        app:layout_constraintStart_toStartOf="@+id/item_excel_option"
        app:layout_constraintTop_toBottomOf="@+id/item_excel_option" />

    <include
        android:id="@+id/item_ppt_option"
        layout="@layout/item_ppt_option"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/item_pdf_option"
        app:layout_constraintStart_toStartOf="@+id/item_pdf_option"
        app:layout_constraintTop_toBottomOf="@+id/item_pdf_option" />

</androidx.constraintlayout.widget.ConstraintLayout>