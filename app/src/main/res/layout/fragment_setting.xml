<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.SettingFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="54dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_infor_app" />

        <Button
            android:id="@+id/btn_premium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableStart="@drawable/ic_premium"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingEnd="40dp"
            android:paddingStart="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="32dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:theme="@style/ThemeImgButtonBlueWhite"
            android:text="@string/btn_premium" />

        <Button
            android:id="@+id/btn_language"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:drawableStart="@drawable/ic_language"
            android:drawablePadding="32dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingEnd="16dp"
            android:paddingStart="32dp"
            android:textSize="20sp"
            android:textStyle="normal"
            android:theme="@style/ThemeImgButtonWhile"
            android:gravity="left|center"
            android:text="@string/btn_language" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#0D0D1436" />

        <Button
            android:id="@+id/btn_share"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:drawableStart="@drawable/ic_share2"
            android:drawablePadding="32dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingEnd="16dp"
            android:paddingStart="32dp"
            android:textSize="20sp"
            android:textStyle="normal"
            android:theme="@style/ThemeImgButtonWhile"
            android:gravity="left|center"
            android:text="@string/btn_share_app" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#0D0D1436" />

        <Button
            android:id="@+id/btn_feedback"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:drawableStart="@drawable/ic_feedback"
            android:drawablePadding="32dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingEnd="16dp"
            android:paddingStart="32dp"
            android:textSize="20sp"
            android:textStyle="normal"
            android:theme="@style/ThemeImgButtonWhile"
            android:gravity="left|center"
            android:text="@string/btn_feedback" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#0D0D1436" />

        <Button
            android:id="@+id/btn_more_app"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:drawableStart="@drawable/ic_more_app"
            android:drawablePadding="32dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingEnd="16dp"
            android:paddingStart="32dp"
            android:textSize="20sp"
            android:textStyle="normal"
            android:theme="@style/ThemeImgButtonWhile"
            android:gravity="left|center"
            android:text="@string/btn_more_app" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#0D0D1436" />

        <Button
            android:id="@+id/btn_privacy_policy"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:drawableStart="@drawable/ic_privacy_policy"
            android:drawablePadding="32dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingEnd="16dp"
            android:paddingStart="32dp"
            android:textSize="20sp"
            android:textStyle="normal"
            android:theme="@style/ThemeImgButtonWhile"
            android:gravity="left|center"
            android:text="@string/btn_privacy_policy" />
    </LinearLayout>
</ScrollView>
